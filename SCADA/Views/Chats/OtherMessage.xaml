<UserControl
    x:Class="SCADA.Views.Chats.OtherMessage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SCADA.Views.Chats"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <StackPanel Orientation="Vertical">
        <Border
            Margin="45,5,0,0"
            Padding="10,7"
            HorizontalAlignment="Left"
            Background="White"
            CornerRadius="0 10 10 10">
            <TextBlock
                Margin="3,0,3,2"
                VerticalAlignment="Center"
                FontSize="14"
                Foreground="Black"
                Text="{Binding ElementName=messagechat, Path=Message}" />
        </Border>
        <TextBlock
            Margin="45,3,0,2"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="12"
            Foreground="Gray"
            Text="{Binding ElementName=messagechat, Path=Time}" />
    </StackPanel>
</UserControl>